<div class="row">
  <div class="small-10 medium-7 large-11 column" data-equalizer-watch id="profile-container">
    <h2 id="name" class="small-centered medium-centered large-centered columns text-center">
      <%= @user.first_name %> <%= @user.last_name %>
    </h2>
    <div id="personal-info" class="small-centered medium-centered large-centered columns text-center">
      <p>Self Check Day: <%= @user.check_day_of_month %>th of every month</p>
      <p>Contact method: <%= @user.prefered_contact%> Phone number: <%= @user.phone%></p>
    <button type="button" class="buttons">Edit profile</button>
    </div>

    <div id="group">
      <%= render partial: 'groups/show', locals: {group: @user.groups.first}%>
    </div>

    <div id="invite-form" class="small-centered medium-centered large-centered columns text-center">
      <%= form_for @invite do |f| %>
        <%= f.label "Invite your friends to join!" %>
        <%= f.email_field :email %>
        <%= f.submit 'Invite a friend', class: 'submit button', id: 'invite' %>
        <%= hidden_field_tag 'group_id', @user.groups.first.id %>
        <%= hidden_field_tag 'user_id', @user.id %>
      <% end %>
    </div>
  </div>
</div>
